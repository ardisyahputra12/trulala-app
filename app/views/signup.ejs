<!DOCTYPE html>
<html lang="en">

<head>
    <title>Trulala App | SignUp</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="../styles/bootstrap.min.css">
    <link rel="stylesheet" href="../styles/style.css">
</head>

<body>
    <div class="d-flex flex-column mt-3">
        <a href="/" title="Back to Home" class="position-absolute"><i class="bi bi-arrow-left-circle-fill m-4"></i></a>
        <div class="container-auth container text-center w-50 p-3">
            <h1 class="text-decoration-underline p-2">SignUp</h1>
            <div class="p-4">
                <div class="input-group mb-3">
                    <i class="bi bi-person-fill p-2"></i>
                    <input type="text" class="form-control" placeholder="Nama" id="user_name" name="user_name" required>
                </div>
                <div class="input-group mb-3">
                    <i class="bi bi-envelope-fill p-2"></i>
                    <input type="email" class="form-control" placeholder="Email" id="user_email" name="user_email"
                        required>
                </div>
                <div class="input-group mb-3">
                    <i class="bi bi-lock-fill p-2"></i>
                    <input type="password" class="form-control" placeholder="Password" id="user_password"
                        name="user_password" required>
                </div>
                <button type="submit" class="button btn btn-primary m-3">SignUp</button>
                <% if (message) { %>
                    <div class="alert alert-danger text-center p-2 m-2">
                        <%= message %>
                    </div>
                    <% } %>
                        <div class="mt-5">
                            <p>Sudah memiliki akun? Silahkan Login.</p>
                            <a href="/auth/login" class="button btn btn-secondary">Login</a>
                        </div>
            </div>
        </div>
    </div>

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
        document.querySelector('.button').addEventListener("click", () => {
            axios({
                method: 'post',
                url: '/auth/signup',
                data: {
                    user_name: document.getElementById("user_name").value,
                    user_email: document.getElementById("user_email").value,
                    user_password: document.getElementById("user_password").value
                }
            }).then((result) => {
                alert(`${result.status}\nSignUp berhasil!`);
                window.location = "/auth/login";
            }).catch((err) => {
                alert(`error: ${err}\nSignUp gagal!`);
                window.location = "/auth/signup";
            });
        });
    </script>
</body>

</html>